                </div>
                <div>
                    <input type="text" name="burrito[restaurant]" id="restaurant" required value="<%= burrito.restaurant %>">
                </div>
            </div>
            
            <div class="input-field">
                <div>
                    <label for="location">Location</label>
                </div>
                <div>
                    <input type="text" name="burrito[location]" id="location" required value="<%= burrito.location %>">
                </div>
            </div>
            
